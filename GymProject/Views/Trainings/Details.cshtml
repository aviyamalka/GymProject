@model GymProject.Models.Training

@{
    ViewData["Title"] = "Details";
    ViewData["YouTubeEmbed"] = Model.VideoUrl;
    ViewData["YouTubeEmbed"] = ViewData["YouTubeEmbed"].ToString().Replace("watch?v=", "embed/");
}

<div class="details">
    <div class="row">
        <h1>@Html.DisplayFor(model => model.Name)</h1>
    </div>
    <hr />

    <div class="row">
        <p>@Html.DisplayFor(model => model.Description)</p>
    </div>
    <div class="row">
        <iframe id="modalYoutubeIframe" width="100%" height="605" src='@ViewData["YouTubeEmbed"]' frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

    </div>
    <hr />
</div>
<div style="float:left;">
    <a asp-action="Edit" asp-route-id="@Model.TrainingId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<br /><br />

<link href="~/css/gym.css" rel="stylesheet" />

<link href="~/css/form.css" rel="stylesheet" />


<link href="~/css/training.css" rel="stylesheet">
