@model GymProject.Models.Training

@{
    ViewData["Title"] = "Details";
    ViewData["YouTubeEmbed"] = Model.VideoUrl;
    ViewData["YouTubeEmbed"] = ViewData["YouTubeEmbed"].ToString().Replace("watch?v=", "embed/");
}

<div class="details">
    <div class="row">
        <h1>@Html.DisplayFor(model => model.Name)</h1>
    </div>
    <hr />

    <div class="row">
        <p>@Html.DisplayFor(model => model.Description)</p>
    </div>
    <div class="row">
        <iframe id="modalYoutubeIframe" width="100%" height="605" src='@ViewData["YouTubeEmbed"]' frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

    </div>
    <hr />
</div>
<div style="float:left;">
    <a asp-action="Edit" asp-route-id="@Model.TrainingId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<br /><br />

<link href="~/css/gym.css" rel="stylesheet" />

<link href="~/css/form.css" rel="stylesheet" />


<link href="~/css/training.css" rel="stylesheet">
<!-- ADD GOOGLE FONT FOR `Assistant` FONT -->
<link href="https://fonts.googleapis.com/css?family=Assistant&display=swap" rel="stylesheet">


<section class="appointment-content appointment-content-red">
    <div class="container ">
        <div class="appointment-content-inner">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="mb-3">לפגישת היכרות והצטרפות השאירו פרטים</h3>
                    <p>אנא מלאו את הפרטים הבאים ונציג יחזור אליכם בהקדם</p>
                </div>
            </div>
            <style>
                .error {
                    color: #FFF;
                }
            </style>
            <form id="FormInnerPage" class="form-full" action="~/Views/Home/tnxpage.cshtml" method="POST" novalidate="novalidate">

                <div class="row no-gutters">
                    <div class="col-12 col-sm-auto">
                        <div class="form-group">
                            <input class="form-control" name="fullname" type="text" placeholder="שם מלא*">
                        </div>
                    </div>
                    <div class="col-12 col-sm-auto">
                        <div class="form-group">
                            <input class="form-control" name="phone" type="text" placeholder="טלפון*">
                        </div>
                    </div>
                    <div class="col-12 col-sm-auto">
                        <div class="form-group">
                            <input class="form-control" name="email" type="text" placeholder="דוא”ל">
                        </div>
                    </div>
                    <div class="col-12 col-sm-auto">
                        <div class="form-group">
                            <select class="form-control" name="club">
                                <option disabled="" selected="">בחר סניף*</option>

                            </select>
                        </div>
                    </div>
                    <div class="col-12 col-sm-auto">
                        <div class="form-group">
                            <button type="submit" class="btn-black ContactFormClubSubmit">שלח</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="custom-checkbox" for="terms-inner">
                                <input type="checkbox" value="1" name="terms" class="form-check-input" id="terms-inner">
                                <span class="checkmark"></span>
                                נא עדכנו אותי על מבצעים והטבות בסמס, מייל וכו'
                            </label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <h2 class="footer-heading">One life.Live it well.</h2>
</section>
