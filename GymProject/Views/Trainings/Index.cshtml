@model IEnumerable<GymProject.Models.Training>

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}


@*<h2>Index</h2>*@

<div class="main-image">
    <h2>"Some people want it to happen, some wish it would happen, others make it happen" (Michael Jordan)</h2>
</div>





<div style="text-align:left;margin: 70px 0 25px 0;">
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {


        <a asp-action="Create">


            <button type="button" class="btn btn-primary btn-lg" style="color:#fff;">
                <i class="glyphicon glyphicon-plus"></i> חדש
            </button>
        </a>
    }
</div>


<div class="row">

    @foreach (var item in Model)
    {


        <div class="col-lg-4 col-md-6">
            <div class="card">
                <img src="~/images/@(item.icon).png" />
                <h4>
                    <a asp-action="Details" asp-route-id="@item.TrainingId">@Html.DisplayFor(modelItem => item.Name)</a>
                </h4>
                <hr />

                <p>@Html.DisplayFor(modelItem => item.shortDescription)</p>
                <div class="options">
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {<div>
                            <a asp-action="Edit" asp-route-id="@item.TrainingId">עריכה</a> |
                            <a asp-action="Delete" asp-route-id="@item.TrainingId">מחיקה</a>
                        </div>

                    }
                    @*@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        { }
                        <a asp-action="Edit" asp-route-id="@item.TrainingId">עריכה</a> |
                        <a asp-action="Delete" asp-route-id="@item.TrainingId">מחיקה</a>*@

                </div>
            </div>
        </div>

    }


</div>
<hr />





