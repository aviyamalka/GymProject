<table class="table pull-right">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.StartTime)*@
                <label class="pull-right">שעת התחלה</label>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.EndTime)*@
                <label class="pull-right">שעת סיום</label>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TeacherName)*@
                <label class="pull-right">שם מורה</label>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.RegistrantMax)*@
                <label class="pull-right">מספר משתתפים מקסימלי</label>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.RegistrantNum)*@
                <label class="pull-right">מספר משתתפים</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrantMax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrantNum)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LessonId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.LessonId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.LessonId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
