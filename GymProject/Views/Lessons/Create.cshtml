@model GymProject.Models.Lesson

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/GlobalStyle.css" />
<h2>שיעור חדש</h2>

<hr />
<div class="row pull-right col-md-10">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="StartTime" class="control-label"></label>*@
                <label>זמן התחלה</label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="EndTime" class="control-label"></label>*@
                <label>זמן סיום</label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="TeacherName" class="control-label"></label>*@
                <label>שם מורה</label>
                <input asp-for="TeacherName" class="form-control" />
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="RegistrantMax" class="control-label"></label>*@
                <label> מספר נרשמים מקסימלי</label>
                <input asp-for="RegistrantMax" class="form-control" />
                <span asp-validation-for="RegistrantMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="RegistrantNum" class="control-label"></label>*@
                <label>מספר נרשמים</label>
                <input asp-for="RegistrantNum" class="form-control" />
                <span asp-validation-for="RegistrantNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="צור" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">חזור לרשימת השיעורים</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
